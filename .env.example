# .env.example
# =================================
# A2A Agent Configuration
# =================================

# ==========================================
# REQUIRED API KEYS
# ==========================================
# Google Gemini API Key (Required for RAG and chat)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Serper API Key (Optional but recommended for web search)  
# Get from: https://serper.dev/dashboard
SERPER_API_KEY=your_serper_api_key_here

# ==========================================
# FEATURES TOGGLES
# ==========================================
# Enable/disable features
ENABLE_RAG=true
ENABLE_WEB_SEARCH=true
ENABLE_CACHING=true

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# ChromaDB vector database path
CHROMA_DB_PATH=./data/vector_db

# Shop information database path
SHOP_DB_PATH=./data/shops.json

# Redis cache URL (optional - falls back to memory cache)
REDIS_URL=redis://localhost:6379

# ==========================================
# SERVER SETTINGS
# ==========================================
# Server host and port
HOST=localhost
PORT=10000

# Debug mode (enables detailed logging)
DEBUG=false

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================
# Gemini models to use
CHAT_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=models/text-embedding-004

# Context length limits
MAX_CONTEXT_LENGTH=4000

# ==========================================
# RAG CONFIGURATION
# ==========================================
# Number of results to retrieve from vector search
VECTOR_SEARCH_K=5

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=20

# ==========================================
# WEB SEARCH CONFIGURATION
# ==========================================
# Maximum web search results to return
WEB_SEARCH_MAX_RESULTS=3

# Web search result language and region
WEB_SEARCH_COUNTRY=vn
WEB_SEARCH_LANGUAGE=vi

# ==========================================
# CACHING CONFIGURATION
# ==========================================
# Cache time-to-live in seconds (1 hour = 3600)
CACHE_TTL=3600

# Maximum cache size (number of items)
MAX_CACHE_SIZE=1000

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Request timeout in seconds
REQUEST_TIMEOUT=30

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Enable structured logging
STRUCTURED_LOGGING=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable development mode features
DEV_MODE=false

# Enable metrics collection
COLLECT_METRICS=true

# Enable performance profiling
ENABLE_PROFILING=false

# ==========================================
# A2A PROTOCOL SETTINGS
# ==========================================
# A2A supported content types
SUPPORTED_INPUT_TYPES=text,text/plain
SUPPORTED_OUTPUT_TYPES=text,text/plain

# Enable streaming responses
ENABLE_STREAMING=true

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=true

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Enable CORS for web frontend
ENABLE_CORS=true

# Allowed origins (comma separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# API key validation (if needed)
REQUIRE_API_KEY=false
API_KEY_HEADER=X-API-Key

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Enable performance metrics
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Enable error tracking
ENABLE_ERROR_TRACKING=true

# ==========================================
# DATA PROCESSING SETTINGS
# ==========================================
# Maximum file upload size (MB)
MAX_UPLOAD_SIZE=10

# Supported file types for upload
SUPPORTED_FILE_TYPES=csv,json,txt

# Data processing batch size
DATA_BATCH_SIZE=50